extends ../layout

block content
  p
    a(href="/books/new-book", class="button") Create a New Book
  table
    tr   
      th Title
      th Author
      th Genre
      th Year
    each book in books 
      tr 
        td
          a(href = "/books/" + book.id + "/update-book") #{book.title}
        td= book.author
        td= book.genre
        td= book.year
